<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bwie.test.twodemo.LoginActivity">

    <ImageView
        android:id="@+id/user_login_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_default_user_head"/>

    <EditText
        android:id="@+id/user_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号/会员名/邮箱"
        android:layout_below="@+id/user_login_head"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/user_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_below="@+id/user_login_username"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/user_forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_below="@+id/user_login_password"
        android:layout_marginTop="20dp"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/user_new_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:layout_below="@+id/user_login_password"
        android:layout_toRightOf="@+id/user_forgetpass"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="180dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/user_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_below="@+id/user_forgetpass"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
